\setlength\@didactic@margin@outer{4.5cm}
\DeclareOptionX{inner}[2.5cm]{\setlength\@didactic@margin@inner{#1}}
\DeclareOptionX{outer}[4.5cm]{\setlength\@didactic@margin@outer{#1}}
